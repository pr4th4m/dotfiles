{
  "rest-client.showHeaders": false,
  "rest-client.proxy": "http://127.0.0.1:3128",
  "coc.preferences.formatOnSaveFiletypes": [
    "go",
    "css",
    "markdown",
    "python",
    "java",
    "yaml",
    "yml",
    "json",
    "md",
    "typescript",
    "javascript",
    "rs"
  ],
  "coc.preferences.rootPatterns": [".git", ".env", "package.json"],
  "diagnostic.virtualText": true,
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args": ["--ignore=E501,W503"],
  "python.linting.flake8Path": "/Users/nevagipr/Library/Python/3.7/bin/flake8",
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "/Users/nevagipr/Library/Python/3.7/bin/black",
  "python.jediEnabled": true,
  "python.jediPath": "/Users/nevagipr/Library/Python/3.7/lib/python/site-packages",
  "python.jediMemoryLimit": -1,
  "suggest.enablePreselect": false,
  "project.rootPatterns": [".env", "go.mod", "package.json", "pom.xml", ".git"],
  "markdownlint.config": {
    "MD013": false,
    "MD041": false
  },
  "languageserver": {
    "golang": {
      "command": "gopls",
      "args": ["serve", "-debug", "0.0.0.0:8484", "-rpc.trace"],
      "rootPatterns": ["go.mod"],
      "filetypes": ["go"]
    }
  }
}
