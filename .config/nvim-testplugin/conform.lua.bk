return {
  'stevearc/conform.nvim',
  lazy = true,
  event = { "BufReadPre", "BufNewFile" },
  config = function()
    require("conform").setup({
      formatters_by_ft = {
        sql = { "sqlfluff" },
      },
    })

    vim.api.nvim_create_autocmd("BufWritePre", {
      pattern = "*.sql",
      callback = function(args)
        require("conform").format({ bufnr = args.buf })
      end,
    })
  end
}
